{
  "name": "website-blog",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:husky": "lint-staged",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "git add --all && git-cz && git push",
    "packages:update": "turbo run packages:update && npx npm-check-updates -u",
    "sync": "run-s sync:*",
    "sync:install": "pnpm install",
    "sync:syncpack:check": "syncpack list-mismatches",
    "sync:syncpack:fix": "syncpack fix-mismatches",
    "sync:deduplicate": "pnpm dedupe",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@turbo/gen": "^1.10.1",
    "@types/node": "20.2.5",
    "commitizen": "4.3.0",
    "config-eslint": "workspace:*",
    "eslint": "8.41.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "13.2.2",
    "npm-run-all": "^4.1.5",
    "package-changed": "3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "shx": "0.3.4",
    "storybook": "7.0.18",
    "syncpack": "^10.1.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tsup": "6.7.0",
    "turbo": "^1.10.1",
    "typescript": "5.0.4"
  },
  "packageManager": "pnpm@8.6.0"
}
