{
  "name": "website-blog",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:husky": "lint-staged",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "git add --all && git-cz",
    "sync": "run-s dependencies",
    "dependencies": "run-s dependencies:*",
    "dependencies:update": "turbo run dependencies:update && npx npm-check-updates -u",
    "dependencies:syncpack:check": "syncpack list-mismatches",
    "dependencies:syncpack:fix": "syncpack fix-mismatches",
    "dependencies:deduplicate": "pnpm dedupe",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@turbo/gen": "^1.9.9",
    "@types/node": "20.2.5",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "commitizen": "4.3.0",
    "config-eslint": "workspace:*",
    "eslint": "8.41.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "13.2.2",
    "next": "13.4.4",
    "npm-run-all": "^4.1.5",
    "package-changed": "3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "shx": "0.3.4",
    "storybook": "7.0.18",
    "syncpack": "^9.8.6",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tsup": "6.7.0",
    "turbo": "^1.9.9",
    "typescript": "5.0.4"
  },
  "packageManager": "pnpm@8.5.1",
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
