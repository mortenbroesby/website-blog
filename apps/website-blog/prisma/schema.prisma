generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model ViewCounter {
  id        Int     @id @default(autoincrement())
  ipAddress String
  slug      String
  count     Int     @default(0)

  @@unique([ipAddress, slug])
}
