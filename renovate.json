{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "onboarding": true,
  "packageRules": [
    {
      "automerge": true,
      "packagePatterns": ["*"],
      "packageFiles": ["package.json"],
      "postUpgradeTasks": {
        "commands": [
          "pnpm install && pnpm lockfile --lockfile-only",
          "git add pnpm-lock.yaml"
        ],
        "fileFilters": ["pnpm-lock.yaml"],
        "executionMode": "update"
      },
      "commitMessage": "chore: ðŸš€ update dependencies"
    }
  ]
}
